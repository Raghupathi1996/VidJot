{{#each ideas}}
<div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    {{!-- <p>{{_id}}</p> --}}
    <a class="btn btn-block btn-dark mb-2" href="/ideas/edit/{{_id}}">
        Edit
    </a>
    <form method="post" action="/ideas/{{_id}}?_method=DELETE">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn btn-block btn-danger" value="Delete">
        {{!-- <a class="btn btn-danger btn-block">
            Delete
        </a> --}}
    </form>
</div>
{{else}}
<p>No video ideas listed</p>
{{/each}}